<div class="container" >
  <div class="row justify-content-center">
    <div class="col-12 col-lg-5" style="background-color: #96B6C5" >
      <h2 style="color:white"><%= @task.title %></h2>
      <p style="color:white"><%= @task.details %></p>
      <input type="checkbox">Completed<% @task.completed %>
      <p>
      <button class="btn btn-light mt-2" style="text-decoration:none">
        <%= link_to "Edit this task", edit_task_path(@task)%>
      </button>
        <p>
      <button class="btn btn-light mt-2"> <%= link_to "Delete",task_path(@task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </button></p>
        <p><button class="btn btn-light mt-2">
          <%= link_to "Back to list", tasks_path%></button></p>
    </div>
  </div>
</div>
