<div class="container" >
  <div class="row justify-content-center">
    <div class="col-12 col-lg-5" style="background-color: #96B6C5" >
      <h1>New Task</h1>
      <%= form_with model: @task do |f| %>
        <%= f.label :title %></label>
        <%= f.text_area :title %>
        <%= f.label :details %>
        <%= f.text_area :details %>
        <%= f.label :completed %>
        <%= f.check_box :completed %>
        <button class="btn btn-primary">Update<% f.submit%></button>
      <% end %>
        <p><button class="btn btn-light mt-2">
      <%= link_to "Back to list", tasks_path%>
      </button></p>
    </div>
  </div>
</div>
